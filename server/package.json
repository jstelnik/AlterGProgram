{
  "name": "altergprogram-server",
  "version": "1.0.0",
  "description": "Backend for AlterGProgram using Node.js, Express, and Drizzle ORM with PostgreSQL.",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.ts",
    "start": "node server.js",
    "migrate:generate": "drizzle-kit generate:pg",
    "migrate:apply": "drizzle-kit push"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.25.1",
    "drizzle-kit": "^0.30.5",
    "express": "^4.18.2",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "typescript": "^5.1.6",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.7"
  }
}
