{
  "name": "altergprogram-server",
  "version": "1.0.0",
  "description": "Backend for AlterGProgram using Node.js, Express, and Drizzle ORM with PostgreSQL.",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.ts",
    "start": "node server.js",
    "migrate:generate": "drizzle-kit generate:pg",
    "migrate:apply": "drizzle-kit push"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.5",
    "drizzle-orm": "^0.25.4",
    "express": "^4.21.2",
    "morgan": "^1.10.0",
    "pg": "^8.13.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.7",
    "nodemon": "^3.1.9",
    "typescript": "^5.1.6"
  }
}
